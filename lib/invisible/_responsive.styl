
// Helper for responsive styles
// Example:
// .element
//   +sreen('sm')
//     margin: 10px
screen($breakpoint, $breakpoints = $grid-breakpoints)
  $min = breakpoint-min($breakpoint, $grid-breakpoints)
  if not $min
    error('There is no "' + $breakpoint + '" breakpoint!')
  else
    @media (min-width: $min) {
      {block}
    }