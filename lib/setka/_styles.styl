
// Make base styles for grid
setka-base-styles()

    * {
        box-sizing: border-box
    }

    :root
        --font-size: 16px
        --line-height: 20px
        --grid-unit: 10px
        --grid-gutter-width: 30px

        // Generate container sizes variables
        for _name, _size in $container-max-widths
            {('--container-' + _name)}: _size

        // Generate space sizes variables
        for _space in 1 2 3 4 5
            {('--space-' + _space)}: s('calc(var(--line-height) * %s)', _space)
    
    // Make base font styles for vertical rythm
    html
        font-size: var(--font-size)

    body
        line-height: var(--line-height)